@model CarRental.Models.User.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-12 colorAqua">
        <form method="post" asp-action="Register" asp-controller="User">
            <center>
                <h1 class="mainColor">Register</h1>
            </center>
            <hr />
            <center>
                <div class="form-group">
                    <input asp-for="@Model.FirstName" value="First Name" class="form-control" style="width: 250px;" />
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="@Model.SecondName" value="Second Name" class="form-control" style="width: 250px;" />
                    <span asp-validation-for="@Model.SecondName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="@Model.LastName" value="Last Name" class="form-control" style="width: 250px;" />
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="@Model.Email" value="Email" class="form-control" style="width: 250px;"/>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="@Model.EGN" value="EGN" class="form-control" style="width: 250px;"/>
                    <span asp-validation-for="@Model.EGN" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="@Model.UserName" value="Username" class="form-control" style="width: 250px;"/>
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input asp-for="@Model.Password" class ="form-control" style="width: 250px;"/>
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" style="width: 250px;" >Register</button>
                </div>
            </center>
        </form>
    </div>
</div>
