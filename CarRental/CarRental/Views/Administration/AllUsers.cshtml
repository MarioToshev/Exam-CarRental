@model ICollection<CarRental.Models.User.UserViewModel>

@{ ViewData["Title"] = "Users"; }


<h1>Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                Role
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @item.Username
                </td>
                <td>
                    @item.Role
                </td>

                <td>
                    <a asp-controller="Administration" asp-action="EditRole" asp-route-username="@item.Username">Edit role</a>
                </td>
                <td>
                    <a asp-controller="Administration" asp-action="DeleteUser" asp-route-username="@item.Username">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>





