@model CarRental.Model.Entities.CarViewModel

<h1 class="mainColor">Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="CAr" asp-action="EditCar" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Model</label>
                <input asp-for="@Model.Model" class="form-control" style="width: 250px;" />
                <span asp-validation-for="@Model.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea asp-for="@Model.Description" class="form-control" style="width: 250px;"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Passager Place</label>
                <input asp-for="@Model.PassagerPlaces" class="form-control" style="width: 250px;" />
                <span asp-validation-for="@Model.PassagerPlaces" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Price Per Day</label>
                <input asp-for="@Model.PricePerDay" class="form-control" style="width: 250px;" />
                <span asp-validation-for="@Model.PricePerDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Year Of Creation</label>
                <input type="date" asp-for="@Model.YearOfCreation" class="form-control" style="width: 250px;" />
                <span asp-validation-for="@Model.YearOfCreation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Photo</label>
                <input type="file" asp-for="@Model.PhotoUrl" class="form-control" style="width: 250px;" />
                <span asp-validation-for="@Model.PhotoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" style="width: 250px;" />
            </div>
        </form>
    </div>
</div>

