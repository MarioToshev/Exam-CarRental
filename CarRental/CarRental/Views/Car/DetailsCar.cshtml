@model CarRental.Model.Entities.CarViewModel

<h1 class="mainColor">Details</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Car" asp-action="DetailsCar" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label><b>Model:</b></label>
                <label>@Model.Model</label>
            </div>
            <div class="form-group">
                <label><b>Description:</b></label>
                <label>@Model.Description</label>
            </div>
            <div class="form-group">
                <label><b>Passager Places:</b></label>
                <label>@Model.PassagerPlaces</label>
            </div>
            <div class="form-group">
                <label><b>Price Per Day:</b></label>
                <label>@Model.PricePerDay</label>
            </div>
            <div class="form-group">
                <label><b>Year Of Creation:</b>></label>
                <label>@Model.YearOfCreation</label>
            </div>
            <div class="form-group">
                <label><b>Photo:</b></label>
                <a href="@Model.PhotoUrl">content</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" style="width: 250px;" />
            </div>
        </form>
    </div>
</div>

